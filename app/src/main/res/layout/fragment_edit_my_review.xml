<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMyReviewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/editMyReview_sport_spinner"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint="City"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editMyReview_tv_sport"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_Pt_city"
                tools:ignore="MissingConstraints"></Spinner>

            <TextView
                android:id="@+id/editMyReview_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="44dp"
                android:text="Description:"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_tv_sport" />

            <EditText
                android:id="@+id/editMyReview_Pt_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="City"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editMyReview_tv_city"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_iv" />

            <Button
                android:id="@+id/editMyReview_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:text="Delete"
                app:layout_constraintEnd_toStartOf="@+id/editMyReview_save_btn"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_tv_description" />

            <Button
                android:id="@+id/editMyReview_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editMyReview_delete_btn"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_Pt_description" />

            <ImageView
                android:id="@+id/editMyReview_iv"
                android:layout_width="340dp"
                android:layout_height="285dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="36dp" />

            <TextView
                android:id="@+id/editMyReview_tv_city"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="16dp"
                android:text="City:"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_iv"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/editMyReview_tv_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Sport:"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/editMyReview_sport_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_tv_city" />

            <Button
                android:id="@+id/editMyReview_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:text="cancel"
                app:layout_constraintEnd_toStartOf="@+id/editMyReview_delete_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_tv_description" />

            <EditText
                android:id="@+id/editMyReview_Pt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Description"
                app:layout_constraintBottom_toTopOf="@+id/editMyReview_delete_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editMyReview_sport_spinner" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>